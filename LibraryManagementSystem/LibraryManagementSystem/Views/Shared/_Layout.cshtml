<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-brand">
            @Html.ActionLink("Our Library", "Index", "Books", new { area = "" }, new { @class = "navbar-brand" })
        </div>
            @if (User.Identity.IsAuthenticated)
            {
    <ul class="my-nav">
        <li>@Html.ActionLink("Books", "Index", "Books", new { area = "" }, new { @class = "navbar-brand" })</li>
        <li>@Html.ActionLink("Members", "Index", "Members", new { area = "" }, new { @class = "navbar-brand" })</li>
        <li>@Html.ActionLink("Publishers", "Index", "Publishers", new { area = "" }, new { @class = "navbar-brand" })</li>
        <li>@Html.ActionLink("Loans", "Index", "Loans", new { area = "" }, new { @class = "navbar-brand" })</li>
        <li>@Html.ActionLink("Logout", "Logout", "Users", new { area = "" }, new { @class = "navbar-brand" })</li>

    </ul>
            }
        <!-- <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
            <a href="~/Views/Shared/_Layout.cshtml">~/Views/Shared/_Layout.cshtml</a>
        </ul>
    </div> -->
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>