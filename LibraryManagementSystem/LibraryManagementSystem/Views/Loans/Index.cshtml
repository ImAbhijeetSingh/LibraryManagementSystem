@model IEnumerable<LibraryManagementSystem.Loan>

@{
    ViewBag.Title = "Index";
}

<h2>Loans</h2>

<p>
    @Html.ActionLink("Add New Entry", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IssueDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReturnDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DueDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Book.Title)
        </th>
        <th>
            <p>Member Name</p>
        </th>
        <th>
            <p>Return</p>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.IssueDate)
    </td>
    <td>
        @if (item.ReturnDate == new DateTime(2021, 1, 1))
        {
            <p>Not returned yet.</p>
        }
        else
        {
            @Html.DisplayFor(modelItem => item.ReturnDate)
        }
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DueDate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Book.Title)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Member.Name)
    </td>
    <td>
        @if (item.ReturnDate == new DateTime(2021, 1, 1))
        {
            @Html.ActionLink("Returned", "Returned", new { id = item.Id })
        }
        else
        {
            <p></p>
        }
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
    </td>
</tr>
}

</table>
